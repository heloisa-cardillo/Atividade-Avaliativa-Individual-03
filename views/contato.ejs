<%- include('header', { titulo: 'Contato' }) %>

    <div class="row">
        <div class="col">
            <div class="standard">
                <h2><strong>Contato</strong></h2>
                <h4><strong>Email:</strong> <a href="mailto:<%= contato.email %>" style="color: #c93384;">
                        <%= contato.email %>
                    </a></h4>
                <h4><strong>LinkedIn:</strong> <a href="<%= contato.linkedin %>" target="_blank"
                        style="color: #c93384;">linkedin.com/in/heloisa-cardillo-lima</a></h4>
                <h4><strong>GitHub:</strong> <a href="<%= contato.github %>" target="_blank"
                        style="color: #c93384;">github.com/heloisa-cardillo</a></h4>
            </div>

            <div class="standard">
                <h2><strong>Redes Sociais</strong></h2>
                <div style="display: flex; justify-content: center; gap: 20px; margin-top: 20px;">
                    <a href="<%= contato.linkedin %>" target="_blank">
                        <img src="/image/linkedin_icon.png" alt="LinkedIn"
                            style="width: 60px; height: 60px; border: 2px solid #c93384; border-radius: 50%; padding: 10px;">
                    </a>
                    <a href="<%= contato.github %>" target="_blank">
                        <img src="/image/github_icon.png" alt="GitHub"
                            style="width: 60px; height: 60px; border: 2px solid #c93384; border-radius: 50%; padding: 10px;">
                    </a>
                    <a href="mailto:<%= contato.email %>">
                        <img src="/image/gmail_icon.png" alt="Email"
                            style="width: 60px; height: 60px; border: 2px solid #c93384; border-radius: 50%; padding: 10px;">
                    </a>
                </div>
            </div>

            <%- include('footer') %>