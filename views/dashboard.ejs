<%- include('header', { titulo: 'Dashboard' }) %>

    <div class="row">
        <div class="col">
            <div class="standard">
                <h2><strong>Estatísticas do Portfólio</strong></h2>
            </div>

            <div class="standard" style="margin-top: 20px;">
                <h2 style="text-align: center;"><strong>Top 5 Tecnologias Mais Usadas</strong></h2>

                <div style="margin-top: 30px;">
                    <% estatisticas.tecnologiasMaisUsadas.forEach(function(tech, index) { %>
                        <div style="display: flex; align-items: center; margin-bottom: 20px;">
                            <div
                                style="min-width: 45px; height: 45px; background: linear-gradient(135deg, #c93384, #e44f9c); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; font-weight: bold; margin-right: 20px; font-size: 20px; box-shadow: 0 2px 8px rgba(201, 51, 132, 0.3);">
                                <%= index + 1 %>
                            </div>
                            <div style="flex: 1;">
                                <h4 style="margin: 0; margin-bottom: 10px;"><strong>
                                        <%= tech[0] %>
                                    </strong> <span style="color: #666;">- usado em <%= tech[1] %> projeto(s)</span>
                                </h4>
                                <div style="background: #f5f5f5; height: 14px; border-radius: 20px; overflow: hidden;">
                                    <div
                                        style="background: linear-gradient(90deg, #c93384, #e44f9c); height: 100%; width: <%= (tech[1] / estatisticas.projetosConcluidos) * 100 %>%; border-radius: 20px;">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                </div>
            </div>

            <div style="display: flex; gap: 20px; margin-top: 20px;">
                <div class="standard" style="flex: 1;">
                    <h2 style="text-align: center; margin-bottom: 30px;"><strong>Disciplinas - Total: 12</strong></h2>

                    <div
                        style="background: white; border: 2px solid #e44f9c; border-radius: 12px; padding: 20px; margin-bottom: 15px;">
                        <h3 style="margin: 0 0 15px 0; color: #c93384;"><strong>1º Sem - Concluídas (5)</strong></h3>
                        <div class="skills-container">
                            <div class="skill-item"
                                style="background: linear-gradient(135deg, #c93384, #e44f9c); color: white; font-size: 13px;">
                                Modelagem de BD</div>
                            <div class="skill-item"
                                style="background: linear-gradient(135deg, #c93384, #e44f9c); color: white; font-size: 13px;">
                                Dev Web I</div>
                            <div class="skill-item"
                                style="background: linear-gradient(135deg, #c93384, #e44f9c); color: white; font-size: 13px;">
                                Eng. Software I</div>
                            <div class="skill-item"
                                style="background: linear-gradient(135deg, #c93384, #e44f9c); color: white; font-size: 13px;">
                                Design Digital</div>
                            <div class="skill-item"
                                style="background: linear-gradient(135deg, #c93384, #e44f9c); color: white; font-size: 13px;">
                                SO e Redes</div>
                        </div>
                    </div>

                    <div
                        style="background: white; border: 2px solid #d988b9; border-radius: 12px; padding: 20px; margin-bottom: 15px;">
                        <h3 style="margin: 0 0 15px 0; color: #d988b9;"><strong>1º Sem - Não Concluídas (1)</strong>
                        </h3>
                        <div class="skills-container">
                            <div class="skill-item" style="background: #d988b9; color: white; font-size: 13px;">
                                Algoritmo e Lógica</div>
                        </div>
                    </div>

                    <div style="background: white; border: 2px solid #b8256f; border-radius: 12px; padding: 20px;">
                        <h3 style="margin: 0 0 15px 0; color: #b8256f;"><strong>2º Sem - Em Andamento (6)</strong></h3>
                        <div class="skills-container">
                            <div class="skill-item" style="background: #b8256f; color: white; font-size: 13px;">BD
                                Relacional</div>
                            <div class="skill-item" style="background: #b8256f; color: white; font-size: 13px;">Dev Web
                                II</div>
                            <div class="skill-item" style="background: #b8256f; color: white; font-size: 13px;">Técnicas
                                Prog. I</div>
                            <div class="skill-item" style="background: #b8256f; color: white; font-size: 13px;">Eng.
                                Software II</div>
                            <div class="skill-item" style="background: #b8256f; color: white; font-size: 13px;">
                                Estrutura de Dados</div>
                            <div class="skill-item" style="background: #b8256f; color: white; font-size: 13px;">Mat.
                                Computação</div>
                        </div>
                    </div>
                </div>

                <div class="standard" style="flex: 1;">
                    <h2 style="text-align: center; margin-bottom: 30px;"><strong>Projetos - Total: 5</strong></h2>

                    <div
                        style="background: white; border: 2px solid #e44f9c; border-radius: 12px; padding: 25px; margin-bottom: 20px;">
                        <h3 style="margin: 0 0 20px 0; color: #c93384;"><strong>Concluídos (3)</strong></h3>
                        <h4 style="margin: 12px 0; padding-left: 15px; border-left: 3px solid #c93384;">API 1º Semestre
                            2025</h4>
                        <h4 style="margin: 12px 0; padding-left: 15px; border-left: 3px solid #c93384;">Aplicativo
                            Julius Tracker</h4>
                        <h4 style="margin: 12px 0; padding-left: 15px; border-left: 3px solid #c93384;">Trabalho
                            Acadêmico</h4>
                    </div>

                    <div style="background: white; border: 2px solid #b8256f; border-radius: 12px; padding: 25px;">
                        <h3 style="margin: 0 0 20px 0; color: #b8256f;"><strong>Em Andamento (2)</strong></h3>
                        <h4 style="margin: 12px 0; padding-left: 15px; border-left: 3px solid #b8256f;">API 2º Semestre
                            2025</h4>
                        <h4 style="margin: 12px 0; padding-left: 15px; border-left: 3px solid #b8256f;">Site Centro de
                            Memórias Fatec</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('footer') %>